body
  margin: 0
  padding: 0
  font-family: 'Karla', sans-serif
  color: white

.world
  position: absolute
  width: 100%
  height: 100%
  overflow: hidden
  animation: light 5s infinite
  background-image: linear-gradient(to top, #a1c4fd 0%, #c2e9fb 33%, #ebbba7 66%, #cfc7f8 100%)
  background-size: 400%
  background-position: 0% 100%
  animation: move 60s infinite
  &:after
    content: ''
    top: 0
    left: 0
    width: 100%
    height: 100%

  @keyframes move
    0%
      background-position: 0% 100%
    50%
      background-position: 100% 0%
    100%
      background-position: 0% 100%


.btn
  position: absolute
  display: flex
  align-items: center
  justify-content: center
  bottom: 20px
  left: 50%
  transform: translate(-50%)
  min-width: 40px
  cursor: pointer
  border-radius: 100%
  padding: 15px
  border: 3px solid white
  svg
    transform: rotate(-90deg)
    width: 40px
    height: 40px


