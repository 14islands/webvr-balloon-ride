body
  margin: 0
  padding: 0
  font-family: 'Roboto', sans-serif
  color: white

.is-inactive
  display: none !important

.world
  position: absolute
  width: 100%
  height: 100%
  overflow: hidden
  animation: light 5s infinite
  background-image: linear-gradient(to top, #a1c4fd 0%, #c2e9fb 33%, #ebbba7 66%, #cfc7f8 100%)
  background-size: 400%
  background-position: 0% 100%
  animation: move 60s infinite
  &:after
    content: ''
    top: 0
    left: 0
    width: 100%
    height: 100%

  @keyframes move
    0%
      background-position: 0% 100%
    50%
      background-position: 100% 0%
    100%
      background-position: 0% 100%


.btn
  position: absolute
  display: flex
  align-items: center
  justify-content: center
  user-select: none
  outline: none
  bottom: 20px
  left: 50%
  transform: translate(-50%)
  min-width: 40px
  cursor: pointer
  transition: all 100ms cubic-bezier(0.250, 0.460, 0.450, 0.940)
  svg
    padding: 15px
    border-radius: 100%
    border: 3px solid white
    transform: rotate(-90deg)
    width: 40px
    height: 40px
    pointer-events: none
  &:active, &:focus
    transform: translate(-50%) scale(0.9)
  &-text
    position: absolute
    text-transform: uppercase
    bottom: 40px
    font-size: 14px
    letter-spacing: 2px
    max-width: 65px
    left: calc(50% + 50px)
